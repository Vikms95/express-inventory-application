extends layout

block content 
  h1 #{actor.name}
  //- If the book has instances, do not show the delete button and show the book instances to delete before
  if movies.length 
    div(style='margin-left:20px;margin-top:20px')
      p #[strong Delete the following movies before attempting to delete this actor.]
      h4 Movies

      dl
      each movie in movies
        hr
        dt
          a(href=movie.url) #{movie.name}
  else 
    p Do you really want to delete this Actor?

    form(method='POST' action='')
      div
        input(type='hidden',name='actorid', required='true', value=actor._id )

      button(type='submit') Delete