extends layout 

block content 
  h1= title
  form(method='POST' action='')
    div 
      label(for='name') Name:
      input(type='text', placeholder='Name of actor' name='name' required='true' value=(actor==undefined ? '' : actor.name))
      br
      label(for='movies') Movies he/she acted on:
      select(type='select', placeholder='Select movies' name='movies')
        for movie in movies
          option( value=movie._id selected= false ) #{movie.name}
      br
    button(type='submit') Create actor
  if errors
    ul
      for error in errors
        li!= error.msg
    