extends layout

block content 
  h1 #{movie.name}
  //- If the book has instances, do not show the delete button and show the book instances to delete before
  if movieinstances.length 
    div(style='margin-left:20px;margin-top:20px')
      p #[strong Delete the following instances before attempting to delete this movie.]
      h4 Instances

      dl
      each instance in movieinstances
        hr
        dt
          a(href=movie.url) #{movie.title}
        dd #{instance.status}
  else 
    p Do you really want to delete this Movie?

    form(method='POST' action='')
      div
        input(type='hidden',name='movieid', required='true', value=movie._id )

      button(type='submit') Delete